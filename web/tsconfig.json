{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "Src/*": [
        "*"
      ],
      "Components/*": [
        "components/*"
      ],
      "Forms/*": [
        "components/forms/*"
      ],
      "Hooks/*": [
        "hooks/*"
      ],
      "Pages/*": [
        "pages/*"
      ],
      "Routes/*": [
        "routes/*"
      ],
      "Services/*": [
        "services/*"
      ],
      "Api/*": [
        "services/API/*"
      ],
      "Store/*": [
        "store/*"
      ],
      "Types/*": [
        "types/*"
      ]
    }
  },
  "include": ["src"]
}
